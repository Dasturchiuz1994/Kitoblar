<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGeneral"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/drawer_image_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/clickable_transparent_white_transparent"
        android:clickable="true"
        android:padding="16dp"
        android:src="@mipmap/icon_drawer" />

    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/clickable_transparent_white_transparent"
        android:clickable="true"
        android:padding="16dp"
        android:src="@mipmap/icon_arrow_left"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Kitoblar"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_view_synch"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/clickable_transparent_white_transparent"
        android:clickable="true"
        android:padding="16dp"
        android:src="@mipmap/icon_synch"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>